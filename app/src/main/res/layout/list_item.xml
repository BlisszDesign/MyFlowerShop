<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/flower_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/wedding" />


        <TextView
            android:id="@+id/flower_name"
            style="@style/ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/quantity_and_price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_weight="4"
            android:fontFamily="@font/greatvibes"
            tools:text="White wedding bouquet"
            />

        <ImageButton
            android:id="@+id/buy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/buy" />


        <LinearLayout
            android:id="@+id/quantity_and_price"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quantity"
                style="@style/TextNormal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:fontFamily="@font/raleway"
                tools:text="5"
               />

            <TextView
                android:id="@+id/quantity_text"
                style="@style/Hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="12"
                android:fontFamily="@font/raleway"
                tools:text="left in Stock"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="6"
                android:fontFamily="@font/raleway"
                android:textColor="@color/textDark"
                android:textSize="@dimen/text_big"
                tools:text="25"
                />

            <TextView
                android:id="@+id/dollar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/raleway"
                android:text="$"
                android:textColor="@color/textDark"
                android:textSize="@dimen/text_big"
                />
        </LinearLayout>




</RelativeLayout>