<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="left">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rose" />


        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/name_and_desc"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:background="@drawable/round_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_background"
                android:fontFamily="@font/raleway"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:text="Price:"
                android:textColor="@color/textDark"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:fontFamily="@font/raleway"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/textDark"
                android:textSize="36sp"
                android:layout_gravity="center_horizontal"
                tools:text="5" />


        </LinearLayout>

        <Button
            android:id="@+id/button_increase"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/quantity_layout"
            android:layout_marginStart="28dp"
            android:layout_weight="1"
            android:background="@drawable/round_background"
            android:fontFamily="@font/raleway"
            android:text="+"
            android:textColor="@color/textDark"
            android:textSize="36sp" />

        <LinearLayout
            android:id="@+id/quantity_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="168dp"
            android:background="@drawable/round_background">

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:fontFamily="@font/raleway"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/textDark"
                android:textSize="36sp"
                tools:text="5" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_background"
                android:fontFamily="@font/raleway"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:text="left in\nStock"
                android:textColor="@color/textDark"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_decrease"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button_delete"
            android:layout_alignTop="@+id/button_increase"
            android:background="@drawable/round_background"
            android:fontFamily="@font/raleway"
            android:text="-"
            android:textColor="@color/textDark"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_increase"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_background"
            android:fontFamily="@font/raleway"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:textColor="@color/textDark"
            android:textSize="@dimen/text_14"
            tools:text="Rose" />

        <LinearLayout
            android:id="@+id/name_and_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/category_name"
            android:background="@drawable/round_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:fontFamily="@font/greatvibes"
                android:gravity="center_horizontal"
                android:textColor="@color/textDark"
                android:textSize="@dimen/text_big"
                tools:text="Pink rose" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background"
                android:fontFamily="@font/raleway"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@color/textDark"
                android:textSize="14sp"
                tools:text="Ez egy hosszabb szöveg, de nem tudom miért nem akarja középre helyezni." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/supplier_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name_and_desc"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_background"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/supplier_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background">

                <TextView
                    android:id="@+id/supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/round_background"
                    android:fontFamily="@font/raleway"
                    android:padding="5dp"
                    android:text="Supplier Name:"
                    android:textColor="@color/textDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/supplier_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_background"
                    android:fontFamily="@font/raleway"
                    android:padding="5dp"
                    android:textColor="@color/textDark"
                    android:textSize="14sp"
                    tools:text="Virágszínpad Kft., Sárisáp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/supplier_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background">

                <TextView
                    android:id="@+id/supplier_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/round_background"
                    android:fontFamily="@font/raleway"
                    android:padding="5dp"
                    android:text="Supplier Phone:"
                    android:textColor="@color/textDark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/supplier_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_background"
                    android:fontFamily="@font/raleway"
                    android:padding="5dp"
                    android:textColor="@color/textDark"
                    android:textSize="14sp"
                    tools:text="06203733135" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_edit"
            android:layout_width="100dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/supplier_info_layout"
            android:layout_marginStart="111dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_shape"
            android:fontFamily="@font/raleway"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/textLight"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="101dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/supplier_info_layout"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_shape"
            android:fontFamily="@font/raleway"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/textLight"
            android:textSize="24sp" />

    </RelativeLayout>

</ScrollView>